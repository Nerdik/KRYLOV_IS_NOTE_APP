<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KRYLOV_IS_NOTE_APP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.MainActivity.Splash" parent="Base.Theme.KRYLOV_IS_NOTE_APP">
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/feather</item>

        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="Theme.KRYLOV_IS_NOTE_APP" parent="Base.Theme.KRYLOV_IS_NOTE_APP" />
</resources>